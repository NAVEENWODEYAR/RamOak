<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <!-- Define a FileAppender to write log messages to a file -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!-- Location of the main log file -->
        <file>log/application.log</file>
        <encoder>
            <!-- Define the log message pattern including milliseconds -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <!-- Define rolling policy with time-based rolling -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Pattern for rolling files, including date and time -->
            <fileNamePattern>log/application-%d{yyyy-MM-dd_HH-mm-ss}.log</fileNamePattern>
            <maxHistory>0</maxHistory> <!-- No history, only keep current log files -->
            <totalSizeCap>1MB</totalSizeCap> <!-- Cap to manage size (optional) -->
        </rollingPolicy>
        <!-- Omit or configure SizeBasedTriggeringPolicy if needed -->
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <!-- Attach the FILE appender to the root logger -->
        <appender-ref ref="FILE" />
        <!-- Optionally, attach the CONSOLE appender to the root logger -->
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Custom logger configurations -->
    <logger name="org.springframework.web" level="DEBUG"/>
    <logger name="org.hibernate" level="ERROR"/>

    <!-- ConsoleAppender configuration -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Define the log message pattern for console output -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
</configuration>
